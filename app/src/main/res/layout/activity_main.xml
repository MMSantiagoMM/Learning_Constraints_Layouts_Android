<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/principalView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/design_default_color_error"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@color/material_dynamic_neutral50"
        app:layout_constraintBottom_toTopOf="@id/principalView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintHorizontal_bias="0.6" />

    <View
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@color/design_default_color_on_secondary"
        app:layout_constraintTop_toBottomOf="@id/principalView"
        app:layout_constraintStart_toStartOf="@id/principalView"
        app:layout_constraintEnd_toEndOf="@id/principalView"
        app:layout_constraintHorizontal_bias="0.9"/>

    <View
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@color/design_default_color_primary_variant"
        app:layout_constraintTop_toTopOf="@id/principalView"
        app:layout_constraintBottom_toBottomOf="@id/principalView"
        app:layout_constraintStart_toStartOf="@id/principalView"
        app:layout_constraintEnd_toEndOf="@id/principalView"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0"/>

    <View
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@color/material_dynamic_neutral80"
        app:layout_constraintTop_toTopOf="@id/principalView"
        app:layout_constraintBottom_toBottomOf="@id/principalView"
        app:layout_constraintStart_toEndOf="@id/principalView"
        app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@color/material_dynamic_neutral_variant90"
            app:layout_constraintTop_toTopOf="@id/principalView"
            app:layout_constraintBottom_toBottomOf="@id/principalView"
            app:layout_constraintStart_toStartOf="@id/principalView"
            app:layout_constraintEnd_toEndOf="@id/principalView"
            app:layout_constraintVertical_bias="0"/>
    <View
        android:id="@+id/secondView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/design_default_color_error"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@color/material_dynamic_primary60"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/secondView"
        app:layout_constraintStart_toEndOf="@id/secondView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="0"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.8"
        android:orientation="vertical"
        android:background="@color/material_dynamic_primary60"/>

    <View
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@color/material_dynamic_tertiary80"
        app:layout_constraintTop_toBottomOf="@id/principalView"
        app:layout_constraintBottom_toTopOf="@id/secondView"
        app:layout_constraintStart_toEndOf="@id/secondView"
        app:layout_constraintEnd_toStartOf="@id/guide"
        app:layout_constraintHorizontal_bias="1" />




</androidx.constraintlayout.widget.ConstraintLayout>